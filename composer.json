{
	"name":        "kisma/kisma",
	"description": "PHP Utility Belt",
	"keywords":    [
		"php", "php5", "library", "utility"
	],
	"homepage":    "https://github.com/kisma/kisma",
	"type":        "library",
	"license":     ["MIT"],
	"config":      {
		"bin-dir": "bin"
	},
	"authors":     [
		{
			"name":  "Jerry Ablan",
			"email": "getkisma@gmail.com"
		}
	],
	"require":     {
		"php": ">=5.3.10"
	},
	"require-dev": {
		"phpunit/phpunit":              "@stable",
		"phpunit/phpunit-mock-objects": "@stable",
		"phpunit/phpunit-selenium":     "@stable",
		"phpunit/phpunit-story":        "@stable",
		"phpunit/dbunit":               "@stable",
		"phpunit/php-code-coverage":    "@stable",
		"phpunit/php-text-template":    "@stable",
		"phpunit/php-token-stream":     "@stable",
		"phpunit/php-timer":            "@stable",
		"phpunit/php-invoker":          "@stable"
	},
	"autoload":    {
		"psr-0": {
			"Kisma": "src/"
		},
		"files": ["src/autoload.php"]
	}
}
